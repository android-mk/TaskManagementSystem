@{
    ViewData["Title"] = "Delete Task"; // Set the page title
    Layout = "_Layout"; // Use your layout file
}

@model TaskManagementSystem.Models.TaskItem

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this task?</h3>
<div>
    <h4>Task Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        <dt class="col-sm-2">Due Date</dt>
        <dd class="col-sm-10">@Model.DueDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Assigned To</dt>
        <dd class="col-sm-10">@Model.AssignedTo</dd>
    </dl>
    <form asp-action="Delete">
        @Html.AntiForgeryToken() 
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Back to List</a>
    </form>
</div>